---
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { siteConfig, homeContent } from "../config/content.ts";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{siteConfig.title}</title>
    <meta name="description" content={siteConfig.description} />
    <script is:inline>
      (function () {
        const savedTheme = localStorage.getItem("theme") || "dark";
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        const initialTheme =
          savedTheme === "system"
            ? prefersDark
              ? "dark"
              : "light"
            : savedTheme;

        if (initialTheme === "dark") {
          document.documentElement.classList.add("dark");
        } else {
          document.documentElement.classList.remove("dark");
        }
      })();
    </script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        window
          .matchMedia("(prefers-color-scheme: dark)")
          .addEventListener("change", (e) => {
            if (localStorage.getItem("theme") === "system") {
              if (e.matches) {
                document.documentElement.classList.add("dark");
              } else {
                document.documentElement.classList.remove("dark");
              }
            }
          });
      });
    </script>
    <style>
      body {
        margin: 0;
        font-family:
          system-ui,
          -apple-system,
          sans-serif;
      }

      @keyframes float {
        0% {
          transform: scale(1.2);
        }
        50% {
          transform: scale(1.3);
        }
        100% {
          transform: scale(1.2);
        }
      }

      .dot-hexagon-light {
        background-image: radial-gradient(
            circle,
            #80808045 1px,
            transparent 1px
          ),
          radial-gradient(circle, #80808045 1px, transparent 1px);
        background-size: 24px 41.57px;
        background-position:
          0 0,
          12px 20.78px;
      }

      .dot-hexagon-dark {
        background-image: radial-gradient(
            circle,
            #ffffff35 1px,
            transparent 1px
          ),
          radial-gradient(circle, #ffffff35 1px, transparent 1px);
        background-size: 24px 41.57px;
        background-position:
          0 0,
          12px 20.78px;
      }
    </style>
  </head>
  <body
    class="min-h-screen flex flex-col bg-white dark:bg-neutral-900 transition-colors duration-300"
  >
    <div class="relative flex-grow flex flex-col">
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute inset-0 dot-hexagon-light dark:dot-hexagon-dark">
        </div>
        <div
          class="absolute inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_50%,transparent_0%,rgba(255,255,255,0.5)_60%,rgba(255,255,255,0.9)_85%,white_100%)] dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_50%,transparent_0%,rgba(23,23,23,0.5)_60%,rgba(23,23,23,0.9)_85%,rgb(23,23,23)_100%)]"
        >
        </div>
        <div
          class="absolute left-1/2 top-1/2 -translate-x-1/2 -translate-y-1/2 h-[1200px] w-[1200px] rounded-full bg-neutral-400 opacity-10 blur-[100px] dark:bg-neutral-600 dark:opacity-15"
          style="max-height: 100vh; max-width: 100vw;"
        >
        </div>
      </div>

      <Navigation />
      <div class="relative flex flex-col flex-1 pt-6 min-h-0">
        <main class="flex-grow flex items-center justify-center min-h-0">
          <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col-reverse lg:flex-row items-center gap-8 lg:gap-12">
              <!-- Texto -->
              <div class="w-full lg:w-1/2 text-center lg:text-left">
                <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100">
                  {homeContent.title}
                </h1>
                <p class="mt-3 text-base sm:text-lg md:text-xl leading-7 text-neutral-600 dark:text-neutral-400">
                  {homeContent.description}
                </p>
                <div class="flex flex-col sm:flex-row items-center sm:items-start justify-center lg:justify-start gap-3 mt-4">
                  <a
                    class="group inline-flex items-center gap-2 px-4 py-2 text-sm sm:text-sm font-medium text-white rounded-lg bg-primary dark:text-neutral-900 transition-transform duration-200 hover:scale-105"
                    href={homeContent.buttons.about.href}
                  >
                    {homeContent.buttons.about.text}
                    <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
                  </a>
                  <a
                    class="group inline-flex items-center gap-2 px-4 py-2 text-sm sm:text-sm font-medium text-neutral-900 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 dark:bg-neutral-800 dark:text-neutral-100 dark:border-neutral-600 transition-transform duration-200 hover:scale-105"
                    href={homeContent.buttons.posts.href}
                  >
                    {homeContent.buttons.posts.text}
                    <svg class="w-4 h-4 transition-transform duration-200 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
                  </a>
                </div>
              </div>

              <!-- Imagen -->
              <div class="w-full lg:w-1/2 flex items-center justify-center">
                <div class="w-full flex items-center justify-center px-4">
                  <div class="w-3/4 sm:w-2/3 md:w-1/2 lg:w-full max-w-[260px] sm:max-w-[360px] md:max-w-[480px] lg:max-w-[600px]">
                    <img
                      src={homeContent.images.light}
                      alt="Tech Background"
                      class="w-full h-auto object-contain animate-[float_15s_ease-in-out_infinite] transition-transform duration-300 opacity-95 dark:hidden"
                    />
                    <img
                      src={homeContent.images.dark}
                      alt="Tech Background Dark"
                      class="w-full h-auto object-contain animate-[float_15s_ease-in-out_infinite] transition-transform duration-300 opacity-95 hidden dark:block"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>

        <Footer />
      </div>
    </div>
  </body>
</html>
